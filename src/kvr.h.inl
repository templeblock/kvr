  /////////////////////////////////////////////////////////////////////////////////////////////////
  /////////////////////////////////////////////////////////////////////////////////////////////////
  /////////////////////////////////////////////////////////////////////////////////////////////////

  inline uint32_t ctx::hash_djb::operator() (const char *s) const
  {
    uint32_t hash = 5381;
    char c;
    while ((c = *s++) != 0)
    {
      hash = ((hash << 5) + hash) + c;
    }

    return hash;
  }
